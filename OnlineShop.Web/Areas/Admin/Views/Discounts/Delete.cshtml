@model OnlineShop.Core.Models.Discount
<h4 class="card-label">
    آیا مطمئن هستید که می خواهید این آیتم را حذف کنید؟
</h4>
<dl class="row" style="padding-top:10px">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-4">
        نوع تخفیف
    </dt>
    <dd class="col-sm-8">
        @if (Model.DiscountType == 1)
        {
            <span>درصد</span>
        }
        else if (Model.DiscountType == 2)
        {
            <span>مقدار</span>
        }
    </dd>
    <dt class="col-sm-4">
        میزان تخفیف
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.Amount)
    </dd>
</dl>
<div style="float:left">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="حذف" class="btn btn-danger mr-2" />
    }
</div>
